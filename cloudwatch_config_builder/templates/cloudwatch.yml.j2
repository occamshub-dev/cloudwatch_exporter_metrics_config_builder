{{ ansible_managed | comment }}
---
region: {{ region }}
metrics:
{% if auto_scaling %}
# Auto Scaling Metrics
{% for metric in auto_scaling_metrics %}
- aws_namespace: {{ metric.aws_namespace }}
  aws_metric_name: {{ metric.aws_metric_name }}
  aws_dimensions: {{ metric.aws_dimensions }}
{% if metric.aws_statistics != [] %}
  aws_statistics: {{ metric.aws_statistics }}
{% endif %}

{% endfor %}
{% endif %}
